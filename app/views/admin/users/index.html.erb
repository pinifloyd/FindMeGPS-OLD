<div class='css-pre-table'>
  <h1><%= t('users.all_users') %></h1>

  <%= link_to(new_admin_user_path, class: 'css-new') do %>
    <input type='button' value="<%= t('users.add_new_user') %>">
  <% end %>
</div>

<table class='css-admin'>
  <thead>
    <tr>
      <th><%= t('users.email') %></th>
      <th><%= t('users.last_login_at') %></th>
      <th><%= t('users.created_at') %></th>
      <th><%= t('base.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% if @users %>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.email, admin_user_path(user) %></td>
          <td><%= user.last_login_at %></td>
          <td><%= user.created_at %></td>
          <td class='css-actions js-actions'>
            <%= link_to t('base.edit'), edit_admin_user_path(user) %>
            <%= link_to t('base.delete'), admin_user_path(user), method: :delete, class: 'js-destroy' %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan='4'><%= t('users.not_found') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
