<%= form_for @user, url: admin_users_path do |f| %>
  <fieldset class='css-admin'>
    <legend><h2><%= t('users.add_new_user') %></h2></legend>

    <%= render partial: 'form', locals: { f: f } %>
  </fieldset>

  <div class='css-submit'>
    <%= f.submit t('base.create') %>
    <%= t('base.or') %>
    <%= link_to t('base.cancel'), admin_users_path %>
  </div>
<% end %>
