<div class='row'>
  <div class='span12 page-header'>
    <h1><%= t('admin.devices.add_new_user') %></h1>
  </div>
</div>

<div class='row'>
  <div class='span4 offset4'>
    <%= form_for @user, url: admin_users_path, builder: BootStrapFormBuilder, html: { class: 'form-horizontal' } do |f| %>

      <%= render partial: 'form', locals: { f: f } %>

      <div class='form-actions'>
        <%= f.submit t('base.create'), class: 'btn btn-primary btn-large' %>
        <%= link_to t('base.cancel'), admin_users_path, class: 'btn' %>
      </div>
    <% end %>
  </div>
</div>
