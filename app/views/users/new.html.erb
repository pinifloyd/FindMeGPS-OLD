<div class='row'>
  <div class='span4 offset4'>
    <fieldset>

      <%= form_for @user, builder: BootStrapFormBuilder, html: { class: 'form-horizontal' } do |f| %>
        <legend><%= t('users.registration_form') %></legend>

        <%= render partial: 'form', object: f %>

        <div class='form-actions'>
          <%= f.submit t('users.create_account'), class: 'btn btn-primary btn-large' %>
        </div>
      <% end %>

    </fieldset>
  </div>
</div>
