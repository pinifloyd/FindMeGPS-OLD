<div id='registration-form'>
  <fieldset>
    <legend>
      <h1><%= t(:registration_form) %></h1>
    </legend>

    <div class='separator'></div>

    <%= form_for @user do |f| %>
      <%= render partial: 'form', object: f %>

      <div class='separator'></div>

      <p><%= f.submit t(:submit) %></p>
    <% end %>
  </fieldset>
</div>
