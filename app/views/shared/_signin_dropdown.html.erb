<%= form_tag user_sessions_url do %>
  <%= label :user_session, :email, 'Email' %>
  <%= text_field :user_session, :email %>
  <br />
  <%= label :user_session, :password, 'Password' %>
  <%= password_field :user_session, :password %>
  <br />
  <%= label :user_session, :remember_me, 'Remember me' %>
  <%= check_box :user_session, :remember_me, :checked => true %>
  <br />
  <%= submit_tag 'Sign In' %>
<% end %>
