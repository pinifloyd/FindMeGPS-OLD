<h1><%= t(:sign_in) %></h1>
<%= form_for @user_session, :url => user_sessions_path do |f| %>
  <%= f.label :email %><br />
  <%= f.text_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit t(:sign_in) %>
<% end %>
